    .wa-time { font-size: 9px; color: #9ca3af; text-align: right; margin-top: 2px; display: flex; justify-content: flex-end; align-items: center; opacity: 0.8; }
    .wa-ticks { color: #53bdeb; font-weight: bold; margin-left:3px; font-size: 10px; }

    .wa-input-area { position: absolute; bottom: 0; left: 0; right: 0; height: 55px; background-color: #1a1a10; display: flex; align-items: center; padding: 0 8px; z-index: 60; border-top: 1px solid #3f3f20; }
