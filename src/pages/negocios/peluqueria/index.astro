    .wa-bubble-bot { align-self: flex-start; background-color: #ffffff; color: #000; border-top-left-radius: 0; }

    .wa-time { font-size: 9px; color: #999; text-align: right; margin-top: 2px; display: flex; justify-content: flex-end; align-items: center; }
    .wa-ticks { color: #34B7F1; font-weight: bold; margin-left:3px; font-size: 10px; }

    .wa-input-area { position: absolute; bottom: 0; left: 0; right: 0; height: 55px; background-color: #f0f2f5; display: flex; align-items: center; padding: 0 8px; z-index: 60; border-top: 1px solid #ddd; }
    .wa-plus { font-size: 20px; color: #888; margin-right: 8px; }
    .wa-input-box { flex: 1; background: white; height: 34px; border-radius: 17px; display: flex; align-items: center; padding-left: 12px; font-size: 13px; color: #999; border: 1px solid #ddd; }
