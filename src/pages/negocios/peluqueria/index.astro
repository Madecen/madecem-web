<script>
    const chatContainer = document.getElementById('phone-chat');
    
    // --- L√ìGICA DE TIEMPOS CORREGIDA ---
    // La conversaci√≥n ahora dura unos 7 segundos en total para ser din√°mica.
    const messages = [
        { text: "Hola, ¬øtienes hueco para cortar puntas?", type: 'user', delay: 500 },
        { text: "¬°Hola! üëã Soy Clara. D√©jame revisar la agenda un momento...", type: 'bot', delay: 1500 },
        { text: "Tengo un hueco ma√±ana a las 11:00 o a las 16:30. ¬øTe va bien alguno?", type: 'bot', delay: 1500 },
        { text: "A las 16:30 me viene perfecto.", type: 'user', delay: 2000 },
        { text: "¬°Hecho! ‚úÖ Te he reservado ma√±ana a las 16:30. Te enviar√© un recordatorio. ¬°Gracias!", type: 'bot', delay: 1500 }
    ];

    function createBubble(text, type) {
        const div = document.createElement('div');
        const isUser = type === 'user';
        const time = new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});

        div.className = isUser ? 'wa-bubble wa-bubble-user' : 'wa-bubble wa-bubble-bot';
        div.innerHTML = `${text}<div class="wa-time">${time} ${isUser ? '<span class="wa-ticks">‚úì‚úì</span>' : ''}</div>`;
        return div;
    }

    function runSimulation() {
        if (!chatContainer) return;
        
        // Limpiamos burbujas anteriores
        const bubbles = chatContainer.querySelectorAll('.wa-bubble');
        bubbles.forEach(b => b.remove());

        let currentDelay = 0;

        messages.forEach(msg => {
            currentDelay += msg.delay;
            setTimeout(() => {
                const bubble = createBubble(msg.text, msg.type);
                chatContainer.appendChild(bubble);
                // Forzamos el scroll al fondo
                chatContainer.scrollTop = chatContainer.scrollHeight;
            }, currentDelay);
        });
    }

    runSimulation();
    
    // TIEMPO DE REINICIO AUMENTADO: 15 segundos
    // (La charla dura 7s, as√≠ que quedan 8s de lectura est√°tica antes de borrar)
    setInterval(runSimulation, 15000); 
</script>

<style is:global>
    /* --- ESTILOS --- */
    .phone-frame {
        position: relative;
        width: 300px;
        height: 600px;
        background: #111;
        border-radius: 45px;
        box-shadow: 0 20px 50px -10px rgba(0,0,0,0.3);
        padding: 10px;
