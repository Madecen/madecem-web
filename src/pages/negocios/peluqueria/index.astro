    }
    
    .wa-back-arrow { font-size: 18px; margin-right: 5px; }
    .wa-avatar { width: 32px; height: 32px; background: white; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 8px; font-weight: bold; font-size: 11px; color: #008069; }
    .wa-info h3 { margin: 0; font-size: 14px; font-weight: 600; }
    .wa-info p { margin: 0; font-size: 10px; opacity: 0.8; }

    .wa-chat-area { flex: 1; overflow-y: auto; padding: 12px; padding-bottom: 80px; display: flex; flex-direction: column; }
    .wa-chat-area::-webkit-scrollbar { display: none; }
    .wa-chat-area { -ms-overflow-style: none; scrollbar-width: none; }

    .wa-date-badge { background: #eef0f2; color: #555; font-size: 10px; font-weight: bold; padding: 4px 10px; border-radius: 8px; box-shadow: 0 1px 1px rgba(0,0,0,0.1); }

