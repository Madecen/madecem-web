<script>
    // 1. TEXTO CAMBIANTE (M√ÅQUINA DE ESCRIBIR)
    const textElement = document.getElementById('changing-text');
    const phrases = ["m√°s clientes.", "menos estr√©s.", "agenda llena.", "cero fallos."];
    let phraseIndex = 0; let charIndex = 0; let isDeleting = false;

    function typeWriter() {
        if (!textElement) return;
        const currentPhrase = phrases[phraseIndex];
        if (isDeleting) {
            textElement.textContent = currentPhrase.substring(0, charIndex - 1); charIndex--;
        } else {
            textElement.textContent = currentPhrase.substring(0, charIndex + 1); charIndex++;
        }
        let typeSpeed = isDeleting ? 50 : 100;
        if (!isDeleting && charIndex === currentPhrase.length) {
            isDeleting = true; typeSpeed = 2000;
        } else if (isDeleting && charIndex === 0) {
            isDeleting = false; phraseIndex = (phraseIndex + 1) % phrases.length; typeSpeed = 500;
        }
        setTimeout(typeWriter, typeSpeed);
    }
    typeWriter();

    // 2. CHAT (L√ìGICA ORIGINAL)
    const chatContainer = document.getElementById('phone-chat');
    const messages = [
        { text: "Hola, ¬øtienes hueco para cortar puntas?", type: 'user', delay: 500 },
        { text: "¬°Hola! üëã Soy Clara. D√©jame revisar la agenda...", type: 'bot', delay: 1500 },
        { text: "Tengo hueco ma√±ana a las 11:00 o a las 16:30. ¬øTe va bien?", type: 'bot', delay: 1500 },
        { text: "A las 16:30 me viene perfecto.", type: 'user', delay: 2000 },
        { text: "¬°Hecho! ‚úÖ Te he reservado ma√±ana a las 16:30.", type: 'bot', delay: 1500 }
    ];

    function createBubble(text, type) {
        const div = document.createElement('div');
        const isUser = type === 'user';
        const time = new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        div.className = isUser ? 'wa-bubble wa-bubble-user' : 'wa-bubble wa-bubble-bot';
        div.innerHTML = `${text}<div class="wa-time">${time} ${isUser ? '<span class="wa-ticks">‚úì‚úì</span>' : ''}</div>`;
        return div;
    }

    function runSimulation() {
        if (!chatContainer) return;
        const bubbles = chatContainer.querySelectorAll('.wa-bubble');
        bubbles.forEach(b => b.remove());
        let currentDelay = 0;
        messages.forEach(msg => {
            currentDelay += msg.delay;
            setTimeout(() => {
                const bubble = createBubble(msg.text, msg.type);
                chatContainer.appendChild(bubble); chatContainer.scrollTop = chatContainer.scrollHeight;
            }, currentDelay);
        });
    }
    runSimulation(); setInterval(runSimulation, 13000);
</script>

<style is:global>
    @keyframes blink { 50% { opacity: 0; } }
    .animate-blink { animation: blink 1s step-end infinite; }

    /* ESTILOS DEL TEL√âFONO DARK TECH */
    .phone-frame {
        position: relative; width: 300px; height: 600px;
        background: #020617; border-radius: 45px;
        box-shadow: 0 0 60px -20px rgba(37,99,235,0.4); 
        padding: 10px; box-sizing: border-box; transform: translateZ(0);
        border: 3px solid #1e293b; margin: 0 auto; 
    }
    .screen {
