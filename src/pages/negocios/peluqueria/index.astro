    .wa-avatar { width: 32px; height: 32px; background: #1f2937; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 8px; font-weight: bold; font-size: 11px; color: #60a5fa; border: 1px solid #374151; }
    .wa-info h3 { margin: 0; font-size: 14px; font-weight: 600; color: #f3f4f6; }
    .wa-info p { margin: 0; font-size: 10px; opacity: 0.7; color: #9ca3af; }

    .wa-chat-area { flex: 1; overflow-y: auto; padding: 12px; padding-bottom: 80px; display: flex; flex-direction: column; }
    .wa-chat-area::-webkit-scrollbar { display: none; } .wa-chat-area { -ms-overflow-style: none; scrollbar-width: none; }
    .wa-date-badge { background: #1f2937; color: #9ca3af; font-size: 10px; font-weight: bold; padding: 4px 10px; border-radius: 8px; border: 1px solid #374151; }

    .wa-bubble { max-width: 85%; padding: 6px 10px; border-radius: 8px; font-size: 13px; line-height: 18px; margin-bottom: 6px; position: relative; font-family: Helvetica, Arial, sans-serif; }
    .wa-bubble-user { align-self: flex-end; background-color: #059669; color: #ecfdf5; border-top-right-radius: 0; }
    .wa-bubble-bot { align-self: flex-start; background-color: #1f2937; color: #f3f4f6; border-top-left-radius: 0; border: 1px solid #374151; }
    .wa-time { font-size: 9px; color: #9ca3af; text-align: right; margin-top: 2px; display: flex; justify-content: flex-end; align-items: center; opacity: 0.8; }
    .wa-ticks { color: #34d399; font-weight: bold; margin-left:3px; font-size: 10px; }

    .wa-input-area { position: absolute; bottom: 0; left: 0; right: 0; height: 55px; background-color: #111827; display: flex; align-items: center; padding: 0 8px; z-index: 60; border-top: 1px solid #1f2937; }
    .wa-plus { font-size: 20px; color: #6b7280; margin-right: 8px; }
    .wa-input-box { flex: 1; background: #1f2937; height: 34px; border-radius: 17px; display: flex; align-items: center; padding-left: 12px; font-size: 13px; color: #9ca3af; border: 1px solid #374151; }
    .wa-send-btn { width: 34px; height: 34px; background: #059669; border-radius: 50%; margin-left: 8px; display: flex; align-items: center; justify-content: center; color: white; font-size: 14px; }
</style>