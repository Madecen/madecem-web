<script>
    // 1. TEXTO CAMBIANTE
    const textElement = document.getElementById('changing-text');
    const phrases = ["llenar agenda.", "cero ausencias.", "m√°s tratamientos.", "paz mental."];
    let phraseIndex = 0; let charIndex = 0; let isDeleting = false;

    function typeWriter() {
        if (!textElement) return;
        const currentPhrase = phrases[phraseIndex];
        if (isDeleting) {
            textElement.textContent = currentPhrase.substring(0, charIndex - 1);
            charIndex--;
        } else {
            textElement.textContent = currentPhrase.substring(0, charIndex + 1);
            charIndex++;
        }
        let typeSpeed = isDeleting ? 50 : 100;
        if (!isDeleting && charIndex === currentPhrase.length) {
            isDeleting = true;
            typeSpeed = 2000;
        } else if (isDeleting && charIndex === 0) {
            isDeleting = false;
            phraseIndex = (phraseIndex + 1) % phrases.length; typeSpeed = 500;
        }
        setTimeout(typeWriter, typeSpeed);
    }
    typeWriter();

    // 2. SIMULACI√ìN CHAT
    const chatContainer = document.getElementById('phone-chat');
    const messages = [
        { text: "Hola, ¬øtienes hueco para mechas y corte?", type: 'user', delay: 500 },
        { text: "¬°Hola guapa! üíÖ Soy el asistente virtual. D√©jame ver...", type: 'bot', delay: 1500 },
        { text: "Para mechas y corte necesito unas 2h. Tengo hueco el Jueves a las 16:00. ¬øTe va bien?", type: 'bot', delay: 2000 },
        { text: "Perfecto, me lo quedo.", type: 'user', delay: 2000 },
        { text: "¬°Genial! üíñ Reservado Jueves 16:00. Te mandar√© un recordatorio el d√≠a antes.", type: 'bot', delay: 1500 }
    ];
    function createBubble(text, type) {
        const div = document.createElement('div');
        const isUser = type === 'user';
        const time = new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        div.className = isUser ? 'wa-bubble wa-bubble-user' : 'wa-bubble wa-bubble-bot';
        div.innerHTML = `${text.replace(/\n/g, '<br>')}<div class="wa-time">${time} ${isUser ? '<span class="wa-ticks">‚úì‚úì</span>' : ''}</div>`;
        return div;
    }

    function runSimulation() {
        if (!chatContainer) return;
        const bubbles = chatContainer.querySelectorAll('.wa-bubble');
        bubbles.forEach(b => b.remove());
        let currentDelay = 0;
        messages.forEach(msg => {
            currentDelay += msg.delay;
            setTimeout(() => {
                const bubble = createBubble(msg.text, msg.type);
                chatContainer.appendChild(bubble); chatContainer.scrollTop = chatContainer.scrollHeight;
            }, currentDelay);
        });
    }
    runSimulation(); setInterval(runSimulation, 14000);

    // 3. CALCULADORA PELUQUER√çA
    const inCitas = document.getElementById('input-citas') as HTMLInputElement;
    const inMins = document.getElementById('input-minutes') as HTMLInputElement;
    const inTicket = document.getElementById('input-ticket') as HTMLInputElement;
    
    const dispCitas = document.getElementById('display-citas');
    const dispMins = document.getElementById('display-minutes');
    const dispTicket = document.getElementById('display-ticket');
    
    const resHours = document.getElementById('result-hours');
    const resMoney = document.getElementById('result-money');

    function calculate() {
        if(!inCitas || !inMins || !inTicket) return;

        const citas = parseInt(inCitas.value);
        const mins = parseInt(inMins.value);
        const ticket = parseInt(inTicket.value);
        const days = 25; // Martes a S√°bado

        // Actualizar visualizaci√≥n
        if(dispCitas) dispCitas.innerText = citas.toString();
        if(dispMins) dispMins.innerText = mins + " min";
        if(dispTicket) dispTicket.innerText = ticket + " ‚Ç¨";

        // C√°lculos: 
        // 1. Horas perdidas = (Citas * Minutos * D√≠as) / 60
        const lostHours = Math.round(((citas * mins * days) / 60));
        
        // 2. Dinero Extra Potencial
        // Estimamos que en 1 hora recuperada puedes meter, digamos, 1 servicio medio (o ticket medio)
        // O m√°s simple: Coste de oportunidad = Horas perdidas * (Ticket medio / duraci√≥n media cita aprox 45min? )
        // Para simplificar y ser conservadores: Asumimos que la hora de trabajo vale aprox el ticket medio (ej: corte+peinado)
        const lostMoney = Math.round(lostHours * ticket);

        if(resHours) resHours.innerText = lostHours.toString();
        if(resMoney) resMoney.innerText = lostMoney.toLocaleString('es-ES');
    }

    inCitas?.addEventListener('input', calculate);
    inMins?.addEventListener('input', calculate);
    inTicket?.addEventListener('input', calculate);
    
    // Init
    calculate();
</script>

