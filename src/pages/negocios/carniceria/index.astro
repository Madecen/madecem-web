<script>
    // 1. TEXTO CAMBIANTE
    const textElement = document.getElementById('changing-text');
    const phrases = ["m√°s pedidos.", "menos audios.", "clientes fieles.", "cero errores."];
    let phraseIndex = 0; let charIndex = 0; let isDeleting = false;

    function typeWriter() {
        if (!textElement) return;
        const currentPhrase = phrases[phraseIndex];
        if (isDeleting) {
            textElement.textContent = currentPhrase.substring(0, charIndex - 1); charIndex--;
        } else {
            textElement.textContent = currentPhrase.substring(0, charIndex + 1); charIndex++;
        }
        let typeSpeed = isDeleting ? 50 : 100;
        if (!isDeleting && charIndex === currentPhrase.length) {
            isDeleting = true; typeSpeed = 2000;
        } else if (isDeleting && charIndex === 0) {
            isDeleting = false; phraseIndex = (phraseIndex + 1) % phrases.length; typeSpeed = 500;
        }
        setTimeout(typeWriter, typeSpeed);
    }
    typeWriter();

    // 2. CHAT
    const chatContainer = document.getElementById('phone-chat');
    const messages = [
        { text: "¬°Hola Ram√≥n! ü•©", type: 'user', delay: 500 },
        { text: "¬°Hola Javi! üëã ¬øQu√© te preparo hoy?", type: 'bot', delay: 1500 },
        { text: "Gu√°rdame 2 chuletones y 1kg de picada para las 13:00.", type: 'user', delay: 2500 },
        { text: "¬°O√≠do cocina! üìù \n‚úÖ 2 Chuletones\n‚úÖ 1kg Picada\n\nTe lo tengo listo a las 13:00.", type: 'bot', delay: 2000 }
    ];

    function createBubble(text, type) {
        const div = document.createElement('div');
        const isUser = type === 'user';
        const time = new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        div.className = isUser ? 'wa-bubble wa-bubble-user' : 'wa-bubble wa-bubble-bot';
        const formattedText = text.replace(/\n/g, '<br>');
        div.innerHTML = `${formattedText}<div class="wa-time">${time} ${isUser ? '<span class="wa-ticks">‚úì‚úì</span>' : ''}</div>`;
        return div;
    }

    function runSimulation() {
        if (!chatContainer) return;
        const bubbles = chatContainer.querySelectorAll('.wa-bubble');
        if(bubbles.length > 0) bubbles.forEach(b => b.remove()); 
        
        let currentDelay = 0;
        messages.forEach(msg => {
            currentDelay += msg.delay;
            setTimeout(() => {
                const bubble = createBubble(msg.text, msg.type);
                chatContainer.appendChild(bubble); chatContainer.scrollTop = chatContainer.scrollHeight;
            }, currentDelay);
        });
    }
    runSimulation(); setInterval(runSimulation, 12000);
</script>

