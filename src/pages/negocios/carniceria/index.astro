<script>
    // 1. TEXTO CAMBIANTE
    const textElement = document.getElementById('changing-text');
    const phrases = ["10h libres.", "0% errores.", "m√°s ventas.", "orden total."];
    let phraseIndex = 0; let charIndex = 0; let isDeleting = false;

    function typeWriter() {
        if (!textElement) return;
        const currentPhrase = phrases[phraseIndex];
        if (isDeleting) {
            textElement.textContent = currentPhrase.substring(0, charIndex - 1);
            charIndex--;
        } else {
            textElement.textContent = currentPhrase.substring(0, charIndex + 1);
            charIndex++;
        }
        let typeSpeed = isDeleting ? 50 : 100;
        if (!isDeleting && charIndex === currentPhrase.length) {
            isDeleting = true;
            typeSpeed = 2000;
        } else if (isDeleting && charIndex === 0) {
            isDeleting = false;
            phraseIndex = (phraseIndex + 1) % phrases.length; typeSpeed = 500;
        }
        setTimeout(typeWriter, typeSpeed);
    }
    typeWriter();

    // 2. SIMULACI√ìN DE CHAT
    const chatContainer = document.getElementById('phone-chat');
    const messages = [
        { text: "Hola Ram√≥n, ponme 2kg de solomillo y 1 de picada para ma√±ana.", type: 'user', delay: 500 },
        { text: "¬°Hola! üëã Soy tu asistente IA. Marchando ese pedido...", type: 'bot', delay: 1500 },
        { text: "Pedido anotado: \n‚úÖ 2kg Solomillo \n‚úÖ 1kg Carne Picada \n\n¬øTe lo preparo para las 12:00?", type: 'bot', delay: 1500 },
        { text: "S√≠, a esa hora paso. Gracias.", type: 'user', delay: 2000 },
        { text: "¬°Hecho! Te espero a las 12:00. Ticket generado. ‚úÖ", type: 'bot', delay: 1500 }
    ];
    function createBubble(text, type) {
        const div = document.createElement('div');
        const isUser = type === 'user';
        const time = new Date().toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'});
        div.className = isUser ? 'wa-bubble wa-bubble-user' : 'wa-bubble wa-bubble-bot';
        div.innerHTML = `${text.replace(/\n/g, '<br>')}<div class="wa-time">${time} ${isUser ? '<span class="wa-ticks">‚úì‚úì</span>' : ''}</div>`;
        return div;
    }

    function runSimulation() {
        if (!chatContainer) return;
        const bubbles = chatContainer.querySelectorAll('.wa-bubble');
        bubbles.forEach(b => b.remove());
        let currentDelay = 0;
        messages.forEach(msg => {
            currentDelay += msg.delay;
            setTimeout(() => {
                const bubble = createBubble(msg.text, msg.type);
                chatContainer.appendChild(bubble); chatContainer.scrollTop = chatContainer.scrollHeight;
            }, currentDelay);
        });
    }
    runSimulation(); setInterval(runSimulation, 15000);

    // 3. CALCULADORA CARNICER√çA
    const inOrders = document.getElementById('input-orders') as HTMLInputElement;
    const inMins = document.getElementById('input-minutes') as HTMLInputElement;
    const inPrice = document.getElementById('input-price') as HTMLInputElement;
    
    const dispOrders = document.getElementById('display-orders');
    const dispMins = document.getElementById('display-minutes');
    const dispPrice = document.getElementById('display-price');
    
    const resHours = document.getElementById('result-hours');
    const resMoney = document.getElementById('result-money');

    function calculate() {
        if(!inOrders || !inMins || !inPrice) return;

        const orders = parseInt(inOrders.value);
        const mins = parseInt(inMins.value);
        const price = parseInt(inPrice.value);
        const workDays = 26; // Carnicer√≠as suelen abrir lunes a s√°bado

        // Actualizar visualizaci√≥n
        if(dispOrders) dispOrders.innerText = orders.toString();
        if(dispMins) dispMins.innerText = mins + " min";
        if(dispPrice) dispPrice.innerText = price + " ‚Ç¨";

        // C√°lculos: (Pedidos * Minutos * D√≠as) / 60
        const lostHours = Math.round(((orders * mins * workDays) / 60));
        const lostMoney = Math.round(lostHours * price);

        if(resHours) resHours.innerText = lostHours.toString();
        if(resMoney) resMoney.innerText = lostMoney.toLocaleString('es-ES');
    }

    inOrders?.addEventListener('input', calculate);
    inMins?.addEventListener('input', calculate);
    inPrice?.addEventListener('input', calculate);
    
    // Init
    calculate();
</script>

