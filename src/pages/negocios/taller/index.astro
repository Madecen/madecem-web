    .wa-ticks { color: #53bdeb; font-weight: bold; margin-left:3px; font-size: 10px; }

    .wa-input-area { position: absolute; bottom: 0; left: 0; right: 0; height: 55px; background-color: #1c1917; display: flex; align-items: center; padding: 0 8px; z-index: 60; border-top: 1px solid #292524; }
    .wa-plus { font-size: 20px; color: #78716c; margin-right: 8px; }
    .wa-input-box { flex: 1; background: #292524; height: 34px; border-radius: 17px; display: flex; align-items: center; padding-left: 12px; font-size: 13px; color: #a8a29e; border: 1px solid #44403c; }
    .wa-send-btn { width: 34px; height: 34px; background: #ea580c; border-radius: 50%; margin-left: 8px; display: flex; align-items: center; justify-content: center; color: white; font-size: 14px; }
</style>