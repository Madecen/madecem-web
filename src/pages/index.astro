                    : `<div class="w-8 h-8 rounded-full ${data.color} flex items-center justify-center text-[10px] font-bold text-white flex-shrink-0 shadow-lg">IA</div><div class="${data.color}/20 border border-${data.color.replace('bg-', '')}/30 p-3 rounded-2xl rounded-tr-none text-blue-100 text-xs md:text-sm max-w-[80%] shadow-sm">${msg.text}</div>`;
				div.innerHTML = content;
				container.appendChild(div);
				if(msg.tag) {
					setTimeout(() => {
						const tag = document.createElement('div');
						tag.className = "flex justify-center animate-pop-in mt-2";
						tag.innerHTML = `<div class="bg-green-500/20 border border-green-500/40 text-green-400 px-3 py-1 rounded-full text-[10px] font-bold flex items-center gap-2 shadow-lg backdrop-blur-md"><span>‚ö° ${msg.tag}</span></div>`;
						container.appendChild(tag);
					}, 600);
				}
			}, msg.delay);
		});
	}

	if(container) {
		runScenario(0);
		setInterval(() => {
			currentScenario = (currentScenario + 1) % scenarios.length;
			runScenario(currentScenario);
		}, 9000);
	}
</script>

