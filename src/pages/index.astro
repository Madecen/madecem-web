---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';

// Importación de assets
import heroIA from '../assets/hero-ia.webp';
import heroVision from '../assets/hero-vision.webp';
import visionindustrialImg from '../assets/visionindustrial.webp'; 
import logoMadecem from '../assets/logo-madecem.svg';
---

<Layout title="MADECEM | Agentes de IA e Industria 4.0">
    <main class="relative isolate bg-[#020617] text-white">
        
        <div class="absolute inset-x-0 -top-40 -z-10 transform-gpu overflow-hidden blur-3xl sm:-top-60" aria-hidden="true">
            <div class="relative left-[calc(50%-11rem)] aspect-[1155/678] w-[36.125rem] -translate-x-1/2 rotate-[30deg] bg-gradient-to-tr from-[#0ea5e9] to-[#2563eb] opacity-20 sm:left-[calc(50%-30rem)] sm:w-[72.1875rem]"></div>
        </div>

        <section class="relative mx-auto max-w-7xl px-6 pb-24 pt-10 sm:pb-32 lg:px-8 lg:py-24 overflow-hidden">
            <div id="hero-carousel" class="relative">
                <div class="carousel-slide flex flex-col lg:flex-row items-center gap-12 transition-all duration-1000">
                    <div class="lg:w-1/2 lg:flex-shrink-0">
                        <span class="rounded-full bg-blue-500/10 px-3 py-1 text-sm font-semibold leading-6 text-blue-400 ring-1 ring-inset ring-blue-500/20">
                            Eficiencia Autónoma
                        </span>
                        <h1 class="mt-8 text-4xl font-bold tracking-tight text-white sm:text-6xl">
                            IA que <span class="text-blue-500 text-glow">elimina</span> tus costes de inactividad.
                        </h1>
                        <p class="mt-6 text-lg leading-8 text-gray-300">
                            No esperes a que tus operarios detecten el cuello de botella. Nuestros agentes autónomos toman decisiones en milisegundos para optimizar tu cadena de suministro.
                        </p>
                        <div class="mt-10 flex items-center gap-x-6">
                            <a href="#contacto" class="rounded-md bg-blue-600 px-5 py-3 text-sm font-semibold text-white shadow-lg shadow-blue-500/30 hover:bg-blue-500 hover:scale-105 transition-all">
                                 Desplegar mi Agente IA
                            </a>
                        </div>
                    </div>
                    <div class="lg:w-1/2 flex justify-center relative">
                        <Image src={heroIA} alt="IA Industrial MADECEM" width={450} height={450} class="w-full max-w-[450px] rounded-2xl shadow-2xl ring-1 ring-white/10 object-cover" />
                    </div>
                </div>

                <div class="carousel-slide hidden flex flex-col lg:flex-row items-center gap-12 transition-all duration-1000">
                    <div class="lg:w-1/2 lg:flex-shrink-0">
                        <h2 class="mt-8 text-4xl font-bold tracking-tight text-white sm:text-6xl">
                            Si tu ojo falla, <span class="text-emerald-500 text-glow">nuestra IA no</span>.
                        </h2>
                        <p class="mt-6 text-lg leading-8 text-gray-300">
                            Control de calidad ultra-preciso mediante Computer Vision. Detectamos defectos en tiempo real que son invisibles para el ojo humano.
                        </p>
                    </div>
                    <div class="lg:w-1/2 flex justify-center relative">
                        <Image src={heroVision} alt="Visión Artificial" width={450} height={450} class="w-full max-w-[450px] rounded-2xl shadow-2xl object-cover" />
                    </div>
                </div>

                <div class="mt-12 flex justify-center gap-3">
                    <button class="dot h-1.5 w-8 rounded-full bg-blue-600 transition-all"></button>
                    <button class="dot h-1.5 w-8 rounded-full bg-white/20 transition-all"></button>
                </div>
            </div>
        </section>

        <section id="servicios" class="py-24 bg-slate-900/50">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="mx-auto max-w-2xl text-center mb-16">
                    <h2 class="text-blue-500 font-semibold tracking-wide uppercase">Soluciones</h2>
                    <p class="mt-2 text-3xl font-bold sm:text-4xl">Agentes IA para la Transformación Digital</p>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div class="p-8 rounded-3xl bg-white/5 border border-white/10 hover:border-blue-500 transition-colors group">
                        <div class="w-12 h-12 bg-blue-600/20 rounded-lg flex items-center justify-center mb-6 text-blue-400 group-hover:bg-blue-600 group-hover:text-white transition-all">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
                        </div>
                        <h3 class="text-xl font-bold mb-3">Agentes Operativos</h3>
                        <p class="text-gray-400">Automatización de flujos de trabajo internos que auto-corrigen errores de proceso sin intervención humana.</p>
                    </div>
                    <div class="p-8 rounded-3xl bg-white/5 border border-white/10 hover:border-emerald-500 transition-colors group">
                        <div class="w-12 h-12 bg-emerald-600/20 rounded-lg flex items-center justify-center mb-6 text-emerald-400 group-hover:bg-emerald-600 group-hover:text-white transition-all">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" /></svg>
                        </div>
                        <h3 class="text-xl font-bold mb-3">Agentes de Visión</h3>
                        <p class="text-gray-400">Inspección de calidad 24/7 y seguridad perimetral inteligente para entornos industriales de alto riesgo.</p>
                    </div>
                    <div class="p-8 rounded-3xl bg-white/5 border border-white/10 hover:border-purple-500 transition-colors group">
                        <div class="w-12 h-12 bg-purple-600/20 rounded-lg flex items-center justify-center mb-6 text-purple-400 group-hover:bg-purple-600 group-hover:text-white transition-all">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" /></svg>
                        </div>
                        <h3 class="text-xl font-bold mb-3">Estrategia de Datos</h3>
                        <p class="text-gray-400">Convertimos silos de datos en conocimiento accionable mediante arquitecturas modernas de Big Data e IA.</p>
                    </div>
                </div>
            </div>
        </section>

        <section id="nosotros" class="py-24 sm:py-32 relative">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="grid grid-cols-1 gap-x-12 gap-y-16 lg:grid-cols-2 items-center">
                    <div class="relative flex justify-center">
                        <Image src={visionindustrialImg} alt="Tecnología Industrial Madecem" width={500} height={500} class="w-full max-w-[500px] rounded-3xl border border-white/10 object-cover shadow-2xl" />
                        <div class="absolute -bottom-6 -right-6 bg-blue-600 p-6 rounded-2xl shadow-xl hidden sm:block">
                            <p class="text-3xl font-bold">+40%</p>
                            <p class="text-sm">Eficiencia operativa</p>
                        </div>
                    </div>
                    <div>
                        <h2 class="text-base font-semibold text-blue-500 uppercase tracking-widest">Nuestra Misión</h2>
                        <p class="mt-2 text-3xl font-bold text-white sm:text-4xl">Tecnología con propósito industrial</p>
                        <div class="mt-6 text-lg text-gray-300 space-y-6">
                            <p>En MADECEM, no solo instalamos software; diseñamos el sistema nervioso de tu fábrica. Entendemos el lenguaje de las máquinas para democratizar el acceso a la IA de vanguardia.</p>
                            <ul class="space-y-4 text-base">
                                <li class="flex items-center gap-3">
                                    <span class="text-blue-500">✔</span> Integración directa con ERP/MES existentes.
                                </li>
                                <li class="flex items-center gap-3">
                                    <span class="text-blue-500">✔</span> Modelos de IA entrenados en entornos locales (Edge Computing).
                                </li>
                            </ul>
                            <div class="pt-8">
                                <a href="mailto:info@madecem.com" class="inline-flex items-center gap-x-2 rounded-full bg-blue-600 px-8 py-4 text-lg font-semibold text-white shadow-xl hover:bg-blue-500 transition-all group">
                                    Comenzar transformación
                                    <span class="group-hover:translate-x-1 transition-transform">→</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <footer class="bg-[#010409] border-t border-white/5 pt-16 pb-8">
            <div class="mx-auto max-w-7xl px-6 lg:px-8">
                <div class="flex flex-col md:flex-row justify-between items-center gap-8">
                    <div class="flex items-center gap-3">
                        <Image src={logoMadecem} alt="Logo MADECEM" width={48} height={48} class="h-12 w-auto" />
                        <span class="text-2xl font-bold tracking-tighter uppercase">Madecem</span>
                    </div>
                    <nav class="flex gap-8 text-sm text-gray-400">
                        <a href="#servicios" class="hover:text-white transition-colors">Servicios</a>
                        <a href="#nosotros" class="hover:text-white transition-colors">Sobre nosotros</a>
                        <a href="mailto:info@madecem.com" class="hover:text-white transition-colors">Contacto</a>
                    </nav>
                </div>
                <div class="mt-16 border-t border-white/5 pt-8 text-center">
                    <p class="text-xs text-gray-500">© 2026 MADECEM S.L. Inteligencia Aplicada a la Industria. Madrid, España.</p>
                </div>
            </div>
        </footer>

    </main>
</Layout>

<style>
    .text-glow { text-shadow: 0 0 20px rgba(59, 130, 246, 0.5); }
    .carousel-slide { 
        animation: fadeIn 0.8s ease-out;
        min-height: 450px; 
    }
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .dot { cursor: pointer; }
</style>

<script>
    const slides = document.querySelectorAll('.carousel-slide');
    const dots = document.querySelectorAll('.dot');
    let currentSlide = 0;

    function showSlide(index: number) {
        slides.forEach((slide, i) => {
            slide.classList.toggle('hidden', i !== index);
            if(dots[i]) {
                dots[i].classList.toggle('bg-blue-600', i === index);
                dots[i].classList.toggle('bg-white/20', i !== index);
                (dots[i] as HTMLElement).style.width = i === index ? '2rem' : '0.5rem';
            }
        });
    }

    function nextSlide() {
        if (slides.length === 0) return;
        currentSlide = (currentSlide + 1) % slides.length;
        showSlide(currentSlide);
    }

    setInterval(nextSlide, 8000);

    dots.forEach((dot, i) => {
        dot.addEventListener('click', () => {
            currentSlide = i;
            showSlide(currentSlide);
        });
    });
</script>