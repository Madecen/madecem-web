---
// src/layouts/Layout.astro
import logoMadecem from '../assets/logo-madecem.svg';

interface Props {
	title: string;
	description?: string;
	theme?: 'carniceria' | 'taller' | 'peluqueria' | 'restaurante' | 'empresa';
}

const { 
    title, 
    description = "Ingeniería de IA para negocios reales. Recupera tu tiempo y automatiza tareas repetitivas.", 
    theme 
} = Astro.props;

const socialImageURL = new URL('/social.png', Astro.site || Astro.url);
const canonicalURL = new URL(Astro.url.pathname, Astro.site || Astro.url);
const currentYear = new Date().getFullYear();
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
        <title>{title}</title>
		<meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />

        <meta property="og:type" content="website" />
        <meta property="og:url" content={Astro.url} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={socialImageURL} />
        <meta property="og:site_name" content="MADECEM S.L." />
        <meta property="og:locale" content="es_ES" />

        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={socialImageURL} />
	</head>
	<body class="bg-[#020617] text-white font-sans selection:bg-blue-500/30 flex flex-col min-h-screen">
		
		<nav class="fixed top-0 w-full z-[100] bg-[#020617]/90 backdrop-blur-xl border-b border-white/5">
			<div class="max-w-7xl mx-auto px-6 h-20 flex items-center justify-between">
				
				<a href="/" class="flex items-center gap-3 group">
					<div class="h-10 flex items-center justify-center">
                        <img 
                            src={logoMadecem.src} 
                            alt="Logotipo MADECEM" 
                            class="h-full w-auto object-contain group-hover:scale-105 transition-transform"
                        />
					</div>
					<span class="text-2xl font-black tracking-tighter text-white">MADECEM</span>
				</a>
				
				<div class="hidden md:flex gap-8 items-center">
					<a href="/#soluciones" class="text-sm font-bold uppercase tracking-widest text-slate-300 hover:text-white transition-colors">Soluciones</a>
					<a href="/empresa" class="text-sm font-bold uppercase tracking-widest text-slate-300 hover:text-white transition-colors">Empresa</a>
					<a href="/#contacto" class="bg-blue-600 hover:bg-blue-500 text-white px-6 py-2.5 rounded-full text-sm font-bold shadow-lg shadow-blue-600/20 transition-all hover:scale-105">
						Contacto
					</a>
				</div>

                <button id="mobile-menu-button" class="md:hidden p-2 text-slate-300 hover:text-white focus:outline-none" aria-label="Abrir menú de navegación">
					<svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
					</svg>
				</button>
			</div>

			<div id="mobile-menu" class="hidden md:hidden bg-[#020617] border-b border-white/5 px-6 py-8 space-y-6 shadow-2xl">
				<a href="/#soluciones" class="block text-xl font-bold uppercase tracking-widest text-white mobile-link hover:text-blue-500 transition-colors">Soluciones</a>
				<a href="/empresa" class="block text-xl font-bold uppercase tracking-widest text-white mobile-link hover:text-blue-500 transition-colors">Empresa</a>
				<a href="/#contacto" class="block w-full text-center bg-blue-600 text-white py-4 rounded-2xl font-black mobile-link active:scale-95 transition-transform">
					Solicitar Información
				</a>
			</div>
		</nav>

		<main class="pt-20 flex-grow">
			<slot />
		</main>

		<footer class="bg-[#010413] border-t border-white/5 py-20 relative overflow-hidden">
            <div class="absolute top-0 left-0 w-full h-[1px] bg-gradient-to-r from-transparent via-blue-900/50 to-transparent"></div>

			<div class="max-w-7xl mx-auto px-6 grid grid-cols-1 md:grid-cols-4 gap-12 text-center md:text-left">
				<div class="md:col-span-2">
					<a href="/" class="text-xl font-black tracking-tighter text-white mb-6 block">MADECEM AI</a>
                    <p class="text-slate-400 max-w-sm mx-auto md:mx-0 leading-relaxed text-sm">
						Ingeniería de automatización pragmática para PYMEs en España.
                        Recuperamos tu tiempo eliminando el trabajo manual repetitivo.
					</p>
                    
                    <div class="flex gap-4 mt-6 justify-center md:justify-start">
                        <a href="#" class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center text-slate-400 hover:bg-blue-600 hover:text-white transition-all" aria-label="Visitar nuestro LinkedIn">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
                        </a>
                        <a href="#" class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center text-slate-400 hover:bg-black hover:text-white transition-all" aria-label="Visitar nuestro Twitter">
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                        </a>
                    </div>
				</div>
				
                <div>
					<h3 class="text-white font-bold mb-6 text-sm uppercase tracking-widest">Sectores</h3>
					<ul class="text-slate-400 space-y-3 text-sm">
						<li><a href="/negocios/taller" class="hover:text-orange-500 transition-colors">Talleres Mecánicos</a></li>
						<li><a href="/negocios/carniceria" class="hover:text-red-500 transition-colors">Carnicerías</a></li>
						<li><a href="/negocios/restaurante" class="hover:text-yellow-500 transition-colors">Hostelería</a></li>
                        <li><a href="/negocios/peluqueria" class="hover:text-pink-500 transition-colors">Peluquería</a></li>
					</ul>
				</div>
				
				<div>
					<h3 class="text-white font-bold mb-6 text-sm uppercase tracking-widest">Legal</h3>
					<ul class="text-slate-400 space-y-3 text-sm">
                        <li><a href="/legal#aviso" class="hover:text-white transition-colors">Aviso Legal</a></li>
                        <li><a href="/legal#privacidad" class="hover:text-white transition-colors">Privacidad</a></li>
                        <li><a href="/legal#cookies" class="hover:text-white transition-colors">Cookies</a></li>
					</ul>
				</div>
			</div>
            
            <div class="max-w-7xl mx-auto px-6 mt-12 pt-8 border-t border-white/5 text-center md:text-left">
                <p class="text-xs text-slate-500">&copy; {currentYear} MADECEM S.L. Todos los derechos reservados.</p>
            </div>
		</footer>

		<script>
			const btn = document.getElementById('mobile-menu-button');
			const menu = document.getElementById('mobile-menu');
			const links = document.querySelectorAll('.mobile-link');

			btn?.addEventListener('click', () => {
				menu?.classList.toggle('hidden');
			});

			links.forEach(link => {
				link.addEventListener('click', () => {
					menu?.classList.add('hidden');
				});
			});
		</script>

	</body>
</html>